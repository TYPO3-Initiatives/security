{
    "name": "typo3/cms-security",
    "type": "typo3-cms-framework",
    "description": "The security library of TYPO3.",
    "homepage": "https://typo3.org",
    "license": ["GPL-2.0-or-later"],
    "authors": [{
        "name": "Artus Kolanowski",
        "role": "Developer"
    }],
    "config": {
        "vendor-dir": ".build/vendor",
        "bin-dir": ".build/bin",
        "sort-packages": true
    },
    "require": {
        "typo3/cms-core": "10.*@dev",
        "webmozart/assert": "^1.0"
    },
    "require-dev": {
        "typo3/testing-framework": "^5.0",
        "codacy/coverage": "^1.4",
        "slevomat/coding-standard": "^4.8"
    },
    "conflict": {
        "typo3/cms": "*"
    },
    "replace": {
        "typo3/cms-security": "self.version"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "10.0.x-dev"
        },
        "typo3/cms": {
            "extension-key": "security",
            "app-dir": ".build",
            "web-dir": ".build/public",
            "Package": {
                "partOfFactoryDefault": true
            }
        }
    },
    "autoload": {
        "psr-4": {
            "TYPO3\\CMS\\Backend\\Security\\": "Classes/Backend/Security",
            "TYPO3\\CMS\\Security\\Build\\": "Build/",
            "TYPO3\\CMS\\Security\\Attribute\\": "Classes/Attribute",
            "TYPO3\\CMS\\Security\\Event\\": "Classes/Event",
            "TYPO3\\CMS\\Security\\Policy\\": "Classes/Policy",
            "TYPO3\\CMS\\Security\\Utility\\": "Classes/Utility"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TYPO3\\CMS\\Security\\Tests\\": "Tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "build:package:link": [
            "TYPO3\\CMS\\Security\\Build\\Composer\\ScriptHelper::linkPackage"
        ],
        "test:php:unit": [
            "@php .build/bin/phpunit -c Build/UnitTests.xml"
        ],
        "test:php:functional": [
            "@php .build/bin/phpunit -c Build/FunctionalTests.xml"
        ],
        "test": [
            "@test:php:unit",
            "@test:php:functional"
        ]
    }
}